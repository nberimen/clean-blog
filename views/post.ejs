<%- include('partials/_header.ejs') -%>

<body>
  <%- include('partials/_navigation.ejs') -%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <span class="meta">Posted by on <%= post.dateCreated %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= post.detail %></p>
        </div>
        <div class="text-center">
          <a href="/posts/edit/<%= post._id %>" class="btn btn-primary"><span>Update Details</span></a>	
        </div>	
        <div class="text-center">
          <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger"
            
          onclick="return confirm('ARE YOU SURE?')"><span>Delete Post</span></a>	
        </div>
      </div>
    </div>
  </article>

  <hr>

  <%- include('partials/_footer.ejs') -%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
